
CREATE TABLE TB_INGREDIENTE (
       CODIGO NUMBER PRIMARY KEY,
       NOME VARCHAR2(50) NOT NULL,
       QUANTIDADE NUMBER,
       UNIDADE VARCHAR2(2) NOT NULL,
       ST_REGISTRO VARCHAR2(1) NOT NULL,
       VALOR NUMBER(10,2)
)

CREATE SEQUENCE SEQ_CODIGO_INGREDIENTE START WITH 1 INCREMENT BY 1

CREATE TABLE TB_LANCHE (
       CODIGO NUMBER PRIMARY KEY,
       NOME VARCHAR2(50) NOT NULL,
       ST_REGISTRO VARCHAR2(1) NOT NULL
)

CREATE SEQUENCE SEQ_CODIGO_LANCHE START WITH 1 INCREMENT BY 1

CREATE TABLE RL_LANCHE_INGREDIENTE(
       COD_LANCHE NUMBER,
       COD_INGREDIENTE NUMBER,
       QUANTIDADE NUMBER,
       PRIMARY KEY(COD_LANCHE, COD_INGREDIENTE),
       FOREIGN KEY (COD_LANCHE) REFERENCES TB_LANCHE,
       FOREIGN KEY (COD_INGREDIENTE) REFERENCES TB_INGREDIENTE
)

//alterando a tabela TB_LANCHE

alter table TB_LANCHE add(preco number(10,2))
alter table RL_LANCHE_INGREDIENTE add(ST_REGISTRO VARCHAR(1))
alter table RL_LANCHE_INGREDIENTE add(unidade VARCHAR(2))
alter table TB_INGREDIENTE add(USUARIO VARCHAR2(50))


CREATE TABLE TB_USUARIO(
	LOGIN VARCHAR2(20) PRIMARY KEY,
	SENHA VARCHAR2(10) NOT NULL,
	NOME VARCHAR2(50) NOT NULL,
	AC_CADASTRO VARCHAR(1),
	AC_VENDA VARCHAR(1),
	AC_ESTOQUE VARCHAR(1),
	AC_FINANCEIRO VARCHAR(1),
	AC_CONTROLEDEACESSO VARCHAR(1),
	ST_REGISTRO VARCHAR(1)
)
